<!-- JS personalizado -->
<script>
    // Función para manejar la selección de categoría
    function handleCategorySave(modalId, formId) {
        const selectedCategory = document.querySelector(`#${formId} input[name="category"]:checked`);
        if (selectedCategory) {
            // Almacenar la categoría seleccionada en el localStorage
            localStorage.setItem('selectedCategory', selectedCategory.value);

            // Cerrar el modal
            const modal = bootstrap.Modal.getInstance(document.getElementById(modalId));
            modal.hide();

            // Redirigir a la página del cuestionario
            window.location.href = "/quizcalculo";
        } else {
            alert('Por favor, selecciona una categoría.');
        }
    }

    // Asignar eventos a los botones de guardar
    document.getElementById('saveCategoryInecuaciones').addEventListener('click', function() {
        handleCategorySave('modalInecuaciones', 'categoryFormInecuaciones');
    });

    document.getElementById('saveCategoryFunciones').addEventListener('click', function() {
        handleCategorySave('modalFunciones', 'categoryFormFunciones');
    });

    document.getElementById('saveCategoryLimites').addEventListener('click', function() {
        handleCategorySave('modalLimites', 'categoryFormLimites');
    });

    document.getElementById('saveCategoryDerivadas').addEventListener('click', function() {
        handleCategorySave('modalDerivadas', 'categoryFormDerivadas');
    });

    document.getElementById('saveCategoryIntegrales').addEventListener('click', function() {
        handleCategorySave('modalIntegrales', 'categoryFormIntegrales');
    });

    document.getElementById('saveCategorySeries').addEventListener('click', function() {
        handleCategorySave('modalSeries', 'categoryFormSeries');
    });
</script>

