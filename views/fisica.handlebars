        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- JS personalizado -->
    <script>
        // Función para manejar la selección de categoría
function handleCategorySave(modalId, formId) {
    const selectedCategory = document.querySelector(`#${formId} input[name="category"]:checked`);
    if (selectedCategory) {
        // Almacenar la categoría seleccionada en el localStorage
        localStorage.setItem('selectedCategory', selectedCategory.value);

        // Cerrar el modal
        const modal = new bootstrap.Modal(document.getElementById(modalId));
        modal.hide();

        // Redirigir a la URL con la categoría seleccionada
        window.location.href = `/quizfisica?categoria=${encodeURIComponent(selectedCategory.value)}`;
    }
}
document.addEventListener("DOMContentLoaded", () => {
    const urlParams = new URLSearchParams(window.location.search);
    const selectedCategory = urlParams.get("categoria");

    if (selectedCategory) {
        console.log("Categoría seleccionada:", selectedCategory);
        // Aquí puedes hacer algo con la categoría, como mostrar contenido dinámico
    }
});

        // Asignar eventos a los botones de guardar
        document.getElementById('saveCategoryVectores').addEventListener('click', function() {
            handleCategorySave('modalVectores', 'categoryFormVectores');
        });

        document.getElementById('saveCategoryLeyesNewton').addEventListener('click', function() {
            handleCategorySave('modalLeyesNewton', 'categoryFormLeyesNewton');
        });

        document.getElementById('saveCategoryTrabajo').addEventListener('click', function() {
            handleCategorySave('modalTrabajo', 'categoryFormTrabajo');
        });

        document.getElementById('saveCategoryMovimiento').addEventListener('click', function() {
            handleCategorySave('modalMovimiento', 'categoryFormMovimiento');
        });
    </script>
</body>

</html>
