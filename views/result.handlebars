<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styler.css" rel="stylesheet" type="text/css" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
</head>
<body>

    <div class="container my-5">
        <h2>Resultados del Cuestionario</h2>
        <div id="resultsList" class="mt-4"></div>
        <a href="/" class="btn btn-primary mt-4">Volver al inicio</a>
    </div>

    <!-- Modal de Solución -->
    <div class="modal fade" id="solutionModal" tabindex="-1" aria-labelledby="solutionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="solutionModalLabel">Solución</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="solutionContent">
                    <!-- Aquí se mostrará la explicación correcta -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const userAnswers = JSON.parse(localStorage.getItem('userAnswers'));
        const resultsList = document.getElementById('resultsList');

        userAnswers.forEach(answer => {
            const resultDiv = document.createElement('div');
            resultDiv.className = "result-item mb-3";

            resultDiv.innerHTML = `
                <strong>Pregunta:</strong> ${answer.pregunta}<br>
                <strong>Tu respuesta:</strong> \\(${answer.respuestaSeleccionada}\\)<br>
                <strong>${answer.esCorrecto ? "<span class='text-success'>¡Respuesta correcta! 🎉</span>" : "<span class='text-danger'>Respuesta incorrecta.</span>"}</strong><br>
            `;

            // Si la respuesta es incorrecta, mostrar el botón para ver la explicación
            if (!answer.esCorrecto) {
                const solutionButton = document.createElement("button");
                solutionButton.classList.add("btn", "btn-primary", "mt-2");
                solutionButton.textContent = "Mostrar explicación";
                solutionButton.dataset.bsToggle = "modal";
                solutionButton.dataset.bsTarget = "#solutionModal";

                solutionButton.addEventListener("click", () => {
                    document.getElementById("solutionModalLabel").innerText = `Explicación para: ${answer.pregunta}`;
                    const solutionContent = document.getElementById("solutionContent");

                    // Mostrar la respuesta correcta de la base de datos en formato MathJax
                    solutionContent.innerHTML = `<strong>Respuesta correcta:</strong> \\(${answer.respuestaCorrecta}\\)<br>
                                                 <strong>Explicación:</strong> ${answer.explicacion}`;
                    
                    // Procesar MathJax para las ecuaciones
                    MathJax.typesetPromise();
                });

                resultDiv.appendChild(solutionButton);
            }

            resultsList.appendChild(resultDiv);
        });

        // Forzar MathJax para procesar ecuaciones dinámicas
        MathJax.typesetPromise();

        // Limpiar almacenamiento local después de mostrar los resultados
        localStorage.removeItem('userAnswers');
    </script>

</body>
</html>
