    <!-- JS personalizado -->
    <script>
        // Función para manejar la selección de categoría
function handleCategorySave(modalId, formId) {
    const selectedCategory = document.querySelector(`#${formId} input[name="category"]:checked`);
    if (selectedCategory) {
        // Almacenar la categoría seleccionada en el localStorage
        localStorage.setItem('selectedCategory', selectedCategory.value);

        // Cerrar el modal
        const modal = new bootstrap.Modal(document.getElementById(modalId));
        modal.hide();

        // Redirigir a la URL con la categoría seleccionada
        window.location.href = `/quizprogramacion?categoria=${encodeURIComponent(selectedCategory.value)}`;
    }
}
document.addEventListener("DOMContentLoaded", () => {
    const urlParams = new URLSearchParams(window.location.search);
    const selectedCategory = urlParams.get("categoria");

    if (selectedCategory) {
        console.log("Categoría seleccionada:", selectedCategory);
        // Aquí puedes hacer algo con la categoría, como mostrar contenido dinámico
    }
});

        // Asignar eventos a los botones de guardar
        document.getElementById('saveCategoryPython').addEventListener('click', function() {
            handleCategorySave('modalPython', 'categoryFormPython');
        });

        document.getElementById('saveCategoryCpp').addEventListener('click', function() {
            handleCategorySave('modalCpp', 'categoryFormCpp');
        });

        document.getElementById('saveCategoryJava').addEventListener('click', function() {
            handleCategorySave('modalJava', 'categoryFormJava');
        });

        document.getElementById('saveCategoryJavaScript').addEventListener('click', function() {
            handleCategorySave('modalJavaScript', 'categoryFormJavaScript');
        });
